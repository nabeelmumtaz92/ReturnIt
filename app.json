{
  "expo": {
    "name": "ReturnIt",
    "slug": "returnit",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "description": "Professional reverse delivery service for returns, exchanges, and donations",
    "privacy": "public",
    "platforms": ["ios", "android", "web"],
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#F8F7F4"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.returnit.app"
    },
    "android": {
      "package": "com.returnit.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#F8F7F4"
      },
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "CAMERA",
        "INTERNET"
      ],
      "playStoreUrl": "https://play.google.com/store/apps/details?id=com.returnit.app"
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow ReturnIt to use your location for pickup and delivery tracking."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow ReturnIt to take photos for package verification."
        }
      ]
    ],
    "scheme": "returnit",
    "extra": {
      "eas": {
        "projectId": "your-project-id-here"
      }
    }
  }
}