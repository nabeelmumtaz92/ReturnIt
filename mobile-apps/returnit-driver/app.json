{
  "expo": {
    "name": "ReturnIt Driver",
    "slug": "returnit-driver",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon-driver.png",
    "userInterfaceStyle": "light",
    "description": "ReturnIt Driver App - Manage pickups, deliveries, route optimization, and earnings with real-time job tracking",
    "platforms": [
      "ios",
      "android"
    ],
    "runtimeVersion": "1.0.0",
    "updates": {
      "enabled": true,
      "fallbackToCacheTimeout": 0,
      "url": "https://u.expo.dev/6dc97462-a28e-4563-adeb-5de73d87e0ce"
    },
    "splash": {
      "image": "./assets/splash-driver.png",
      "resizeMode": "contain",
      "backgroundColor": "#F8F7F4"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.returnit.driver",
      "buildNumber": "1",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Allow ReturnIt Driver to use your location for navigation and job completion verification.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Allow ReturnIt Driver to track your location for pickup and delivery assignments, even when the app is in the background.",
        "NSLocationAlwaysUsageDescription": "Allow ReturnIt Driver to access location for background job tracking and route optimization.",
        "NSCameraUsageDescription": "Allow ReturnIt Driver to take photos for package verification and proof of delivery.",
        "UIBackgroundModes": [
          "location"
        ],
        "CFBundleDisplayName": "ReturnIt Driver",
        "CFBundleName": "ReturnIt Driver"
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.returnit.driver",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon-driver.png",
        "backgroundColor": "#F8F7F4"
      },
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "CAMERA",
        "INTERNET",
        "VIBRATE",
        "RECEIVE_BOOT_COMPLETED",
        "WAKE_LOCK",
        "FOREGROUND_SERVICE",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "https",
              "host": "driver.returnit.online"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "plugins": [
      [
        "expo-build-properties",
        {
          "android": {
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "buildToolsVersion": "35.0.0"
          }
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow ReturnIt Driver to track your location for pickup and delivery assignments.",
          "locationWhenInUsePermission": "Allow ReturnIt Driver to use your location for navigation and job completion."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow ReturnIt Driver to take photos for package verification and proof of delivery."
        }
      ]
    ],
    "scheme": "returnit-driver",
    "extra": {
      "eas": {
        "projectId": "6dc97462-a28e-4563-adeb-5de73d87e0ce"
      }
    },
    "owner": "nabeelmumtaz92"
  }
}
