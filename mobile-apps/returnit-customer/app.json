{
  "expo": {
    "name": "ReturnIt",
    "slug": "returnit-customer",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "description": "Professional reverse delivery service - Book returns, exchanges, and donations",
    "privacy": "public",
    "platforms": ["ios", "android"],
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#F8F7F4"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.returnit.customer"
    },
    "android": {
      "package": "com.returnit.customer",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#F8F7F4"
      },
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "CAMERA",
        "INTERNET"
      ]
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow ReturnIt to use your location for pickup scheduling."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow ReturnIt to take photos for package verification."
        }
      ]
    ],
    "scheme": "returnit-customer",
    "extra": {
      "eas": {
        "projectId": "returnit-customer-project-id"
      }
    }
  }
}